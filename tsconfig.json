{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceRoot": "src",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "downlevelIteration": true,
    "lib": [
      "esnext", "dom"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
